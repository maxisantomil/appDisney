<div>
    <hr>
    <h3>Crear Character</h3>
    <hr>
    <div class="formulario">
        <%= form_with model: @character do |form| %>
            <div>
                <%= form.label :url_imagen %>
                    <%= form.text_field :url_imagen %>
            </div>
            <div>
                <%= form.label :nombre %>
                    <%= form.text_field :nombre %>
            </div>
            <div>
                <%= form.label :edad %>
                    <%= form.text_field :edad %>
            </div>
            <div>
                <%= form.label :peso %>
                    <%= form.text_field :peso %>
            </div>
            <div>
                <%= form.label :historia %>
                    <%= form.text_field :historia %>
            </div>
            <%= form.submit %>
                <% end %>
    </div>
</div>